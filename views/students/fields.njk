

    <div class="item">
        <div>Avatar URL</div>
        <div>
            <input
             type="url"
             name="avatar_url"
             placeholder="http://"
             value="{{teacher.avatar_url}}"
            >
        </div>
    </div>    
    <div class="item">
        <div>Nome</div>
        <div>
            <input
             type="text"
             name="name"
             placeholder="Nome do professor"
             value="{{teacher.name}}"
            >
        </div>
    </div>
    <div class="item">
        <div>Data de nascimento</div>
        <div>
            <input 
            type="date"
            name="birth"
            value="{{teacher.birth}}"
            >
        </div>
    </div>
    <div class="item">
        <div>Sexo</div>
        <div>
            <span >
                <input type="radio" 
                name="gender"
                value="M" 
                {% if teacher.gender == "M" %}
                checked
                {% endif %}>Masculino</span>
            <span >
                <input 
                type="radio"
                name="gender"
                value="F"
                {% if teacher.gender == "F" %}
                checked
                {% endif %}
                  >Feminino</span>
        </div>
    </div>
    <div class="item">
        <div>Área de atuação</div>
        <input 
        type="text"
        name="services"
        placeholder="Quais matérias dá aula"
        value="{{teacher.services}}"
        >
    </div>
    <div class="item">
        <div>Nível de escolaridade</div>
            <input 
            type="text"
            name="degree"
            placeholder="Digite seu nível de escolaridade"
            value="{{teacher.degree}}"
            >
    </div>
    <button type="submit">SALVAR</button>