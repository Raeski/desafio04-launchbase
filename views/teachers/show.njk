{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section 
    class="avatar" 
    style="background: url({{teacher.avatar_url}}) no-repeat center center /cover">
    </section>
    <section class="details">
        <h3>Detalhes</h3>
    <div class="item">
        <div>Nome</div>
        <div>{{teacher.name}}</div>
    </div>
    <div class="item">
        <div>Idade</div>
        <div>{{teacher.birth}}</div>
    </div>
    <div class="item">
        <div>Sexo</div>
        <div>{{teacher.gender}}</div>
    </div>
    <div class="item">
        <div>Grau de escolaridade</div>
        <div>{{teacher.degree}}</div>
    </div>

    <div class="item">
        <div>Acompanhamento</div>
        {% for service in services %}
        <span>{{service}}</span>
        {% endfor %}
    </div>
    <div class="item">
        <div>Desde</div>
        <div>{{teacher.created_at}}</div>
    </div>

    </section>
</div>
{% endblock content %}
